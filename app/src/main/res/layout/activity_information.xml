<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/colorWhite" tools:context="by.bstu.fit.oleggutsev.lab8_9android.InformationActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:paddingTop="@dimen/tool_bar_top_padding"
        android:transitionName="actionBar" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Информация пользователя"
        android:textIsSelectable="true"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:textSize="25sp"/>


    <TextView
        android:id="@+id/Info_textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textIsSelectable="true"
        android:onClick="ChangeInfo_onClick"
        android:text="+\nДобавить\n информацию"
        android:textSize="22sp"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/nameAndSurname"
        style="@style/informationTextView_style"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:text="1234567"/>

    <TextView
        android:id="@+id/mark"
        style="@style/informationTextView_style"
        tools:text="1234567"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <TextView
        android:id="@+id/addInfo"
        style="@style/informationTextView_style"
        tools:text="1234567"
        android:layout_marginBottom="50dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <ImageView
        android:id="@+id/image"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"/>

</LinearLayout>
